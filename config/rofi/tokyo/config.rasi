configuration {
    display-drun: "Applications:";
    display-window: "Windows:";
    drun-display-format: "{icon} {name}";
    modi: "window,run,drun";
    show-icons: true;
    icon-theme: "Papirus";
    font: "DejaVuSansMono Nerd Font Mono 11";

}

@theme "./theme.rasi"

window {
	width: 45%;
	border: 2px;
	border-color: @bg;
	border-radius: 5;
}

element {
	padding: 12;
	text-color: @fg-alt;
	border-radius: 5px;
}

element selected.normal {
    background-color: 				@fg;
    text-color:       				@bg;
}

element selected {
	text-color: @fg;
}

element-text {
	background-color: inherit;
	text-color: inherit;
	vertical-align: 0.5;
}

element-icon {
	size: 22;
}

entry {
	background-color: @bg;
	padding: 12;
	text-color: @fg;
}

case-indicator {
    spacing: 0;
    text-color: @fg;
}

inputbar {
	children: [prompt, entry, case-indicator];
}

scrollbar {
	background-color: #15151b;
	handle-width: 8px;
	handle-color: @fg;
}

listview {
	padding: 8 12;
	background-color: @bg;
	columns: 1;
	lines: 8;
	scrollbar: false;
}

mainbox {
  background-color: @bg;
  children: [inputbar, listview];
  padding: 6;
  border: 0px;
  border-color: @fg;
}

prompt {
  background-color: @bg-alt;
  enabled: true;
  padding: 12 0 0 12;
  text-color: @fg;
}
